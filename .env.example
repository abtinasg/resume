# OpenAI API Key for resume analysis
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Hybrid Mode Configuration
# Controls whether AI layer is mandatory for resume scoring
# - true (default): AI layer is required - system fails if AI is unavailable
# - false: Local scoring only - AI layer is skipped (for testing/development)
# When enabled, both local scoring AND AI validation must succeed
HYBRID_MODE=true

# Contact Form Email Configuration
# For Gmail, you need to use an "App Password" instead of your regular password
# Learn more: https://support.google.com/accounts/answer/185833
CONTACT_EMAIL=youremail@gmail.com
CONTACT_EMAIL_PASSWORD=yourapppassword

# Database Configuration
# PostgreSQL connection string for user authentication
# Format: postgresql://username:password@host:port/database?schema=public
DATABASE_URL=postgresql://postgres:password@localhost:5432/resumeiq?schema=public

# JWT Authentication Secret
# Generate a secure random string for production (e.g., using: openssl rand -base64 32)
# This is used to sign and verify JWT tokens
JWT_SECRET=your_jwt_secret_key_here_change_in_production
